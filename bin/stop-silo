#!/bin/bash
set -meuo pipefail
IFS=

if [ -e .silo.pid ]; then
    pid=$(cat .silo.pid)
    kill -INT "$pid"
    
    echo -n "Waiting for silo (PID $pid) to shut down..."
    while [ -e .silo.pid ]; do 
        sleep 0.5
    done
    echo done.
    
else
    echo "Not running (there is no .silo.pid file)"
fi

